<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.diegofg11.Controlador.Controlador"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <MenuBar>
        <Menu text="_Archivo">
            <MenuItem fx:id="menuClose" text="Cerrar" onAction="#handleClose"/>
        </Menu>
        <Menu text="_Ayuda">
            <MenuItem fx:id="menuAbout" text="Acerca de" onAction="#handleAbout"/>
        </Menu>
    </MenuBar>

    <HBox spacing="10">
        <Label text="Nombre:"/>
        <TextField fx:id="txtNombre" promptText="Nombre"/>

        <Label text="Apellido:"/>
        <TextField fx:id="txtApellido" promptText="Apellido"/>

        <Label text="Fecha de nacimiento:"/>
        <DatePicker fx:id="dpFecha"/>

        <Button text="Agregar" onAction="#agregarPersona"/>
        <Button text="Restaurar" onAction="#limpiarCampos"/>
        <Button text="Eliminar" onAction="#eliminarPersona"/>
    </HBox>

    <TableView fx:id="tablaPersonas">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colNombre" text="Nombre"/>
            <TableColumn fx:id="colApellido" text="Apellido"/>
            <TableColumn fx:id="colFecha" text="Fecha"/>
        </columns>
    </TableView>

</VBox>


